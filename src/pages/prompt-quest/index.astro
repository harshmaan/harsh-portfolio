---
// src/pages/prompt-quest/index.astro
import { useState } from "solid-js/web";
---

<html lang="en">
  <body class="bg-black text-white p-6 flex flex-col items-center justify-center min-h-screen">
    <h1 class="text-3xl mb-4">Join Prompt Quest</h1>
    <form
      on:submit={(e) => {
        e.preventDefault();
        const name = e.target.name.value;
        const sessionId = e.target.sessionId.value;
        if (name && sessionId) {
          localStorage.setItem("promptQuestName", name);
          window.location.href = `/prompt-quest/join?sessionId=${sessionId}`;
        }
      }}
      class="flex flex-col gap-4 w-full max-w-md"
    >
      <input
        type="text"
        name="name"
        placeholder="Enter your name"
        class="p-2 rounded bg-neutral-800 border border-neutral-600 text-white"
        required
      />
      <input
        type="text"
        name="sessionId"
        placeholder="Enter session ID"
        class="p-2 rounded bg-neutral-800 border border-neutral-600 text-white"
        required
      />
      <button
        type="submit"
        class="bg-red-600 hover:bg-red-700 py-2 px-4 rounded"
      >
        Join Game
      </button>
    </form>
  </body>
</html>
