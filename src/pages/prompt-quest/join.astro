<html>
  <head>
    <title>Join Prompt Quest</title>
  </head>
  <body class="bg-black text-white p-6">
    <div class="max-w-md mx-auto space-y-4">
      <h1 class="text-2xl font-bold">Join Prompt Quest</h1>
      <form id="join-form" class="space-y-4">
        <div>
          <label for="name" class="block mb-1">Your Name:</label>
          <input
            id="name"
            name="name"
            required
            class="w-full px-3 py-2 rounded bg-neutral-800 border border-neutral-600"
          />
        </div>

        <div>
          <label for="sessionId" class="block mb-1">Session ID:</label>
          <input
            id="sessionId"
            name="sessionId"
            required
            class="w-full px-3 py-2 rounded bg-neutral-800 border border-neutral-600"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-red-600 hover:bg-red-700 px-4 py-2 rounded font-medium"
        >
          ðŸš€ Join Game
        </button>
      </form>
    </div>

    <script type="module">
      document.getElementById("join-form").addEventListener("submit", (e) => {
        e.preventDefault();
        const name = document.getElementById("name").value;
        const sessionId = document.getElementById("sessionId").value;

        localStorage.setItem("promptQuestName", name);
        window.location.href = `/prompt-quest/game/${sessionId}`;
      });
    </script>
  </body>
</html>
