---
import BasicLayout from "../layouts/BasicLayout.astro";
---

<BasicLayout title="Admin Panel" description="Welcome to your AI admin panel.">
  <main class="text-white flex flex-col items-center justify-center w-full h-screen gap-4">
    <h1 class="text-3xl font-bold">🛠️ Admin Panel</h1>

    <!-- 🔍 Persona Tracker Redirect Button -->
    <a
      href="/persona-tracker"
      class="mt-2 inline-block px-4 py-2 border border-blue-500 text-blue-400 hover:text-white hover:bg-blue-600 rounded-lg text-sm transition"
    >
      🚀 Open Persona Tracker
    </a>

    <form method="POST" action="/api/logout">
      <button
        type="submit"
        class="mt-4 inline-block px-4 py-2 border border-neutral-700 rounded-lg text-sm hover:bg-neutral-800 transition"
      >
        Logout
      </button>
    </form>

    <a
      href="/spy"
      class="border-2 border-green-500 border-b-[3px] text-white bg-transparent hover:bg-green-600 hover:text-white px-4 py-2 rounded-lg transition text-sm font-medium"
    >
      🕵️‍♂️ Play Spy Among Prompts
    </a>


    <a href="/" class="text-sm text-neutral-400 hover:text-white mt-2">← Back to Home</a>
  </main>
</BasicLayout>
